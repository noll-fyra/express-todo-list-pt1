<h1>View/Update Todo</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <form method="POST" action="/todoUpdated">
                <td><input type="text" placeholder="Name" name="name" value=<%= updateTodo.name %>></td>
                <td><input type="text" placeholder="Description" name="description" value=<%= updateTodo.description %>></td>
                <td><input type="text" placeholder="Completed?" name="completed" value=<%= updateTodo.completed %>></td>
                <td>
                    <button type="submit" value=<%- updateTodo.id %> name='id'>Update</button>
                </td>
            </form>
            <form method="GET" action="/">
                <td>
                    <button type="submit">Cancel</button>
                </td>
            </form>
        </tr>
    </tbody>
</table>
